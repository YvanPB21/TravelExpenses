# Configuración de Firebase Firestore
# Nombre de la base de datos en Firestore (si no es "(default)")
FIRESTORE_DATABASE_ID=split-bill-db

# Credenciales de Firebase (alternativa a firebase-credentials.json)
# FIREBASE_CREDENTIALS={"type":"service_account",...}
# GOOGLE_APPLICATION_CREDENTIALS=ruta/a/firebase-credentials.json

# Configuración de caché
FIRESTORE_ENABLE_CACHE=true
FIRESTORE_CACHE_TTL=5

# Timeouts
FIRESTORE_READ_TIMEOUT=10
FIRESTORE_WRITE_TIMEOUT=10

# Debug
DEBUG_FIRESTORE=false

